<div class="row">
  <div class="col-xs-offset-1">
    <div class="col-xs-11 admins genres_index_main">
	<h4 class="Menu">ジャンル一覧・追加</h4>

	<%= form_for (@genre), url: admins_genres_path do |f| %>
	  <%= render 'layouts/error_messages', model: f.object %>
	  <%= f.label :ジャンル %>
      <%= f.text_field :genre_name, :placeholder => "ジャンル名", autofocus: true, autocomplete: "genre_name" %>
      <%= f.radio_button :genre_status, :true %>
      <%= f.label :genre_status, "有効"  %>
      <%= f.radio_button :genre_status, :false %>
      <%= f.label :genre_status, "無効" %>
      <%= f.submit "追加" ,class: "btn btn-primary" %>
    <% end %>

  	<table class="table genre-index">
  	  <thead>
  	    <th>ジャンル</th>
  	    <th>状態</th>
  	    <th></th>
	  </thead>

	  <tbody>
	    <% @genres.each do |genre| %>
	    <tr>
	      <td><%= link_to genre.genre_name, admins_products_path(genre_id: genre) %></td>
	      <td>
	  	    <% if genre.genre_status %>
	  		  有効
	  	    <% else %>
	  		  無効
	  	    <% end %>
	      </td>
	      <td>
	  	    <%= link_to "編集する", edit_admins_genre_path(genre), class: 'btn btn-primary' %>
	      </td>
		</tr>
	    <% end %>
	  </tbody>
	</table>
   </div>
  </div>
</div>