<h4 class="Menu">新規会員登録</h4><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
        <%= f.label :名前 %><br />
        </div>
        <div class="col-sm-1">
        （姓）
        </div>
        <div class="col-sm-3">
        <%= f.text_field :last_name, :placeholder => "山田", autofocus: true, autocomplete: "last_name" %>
        </div>
        <div class="col-sm-1">
        （名）
        </div>
        <div class="col-sm-5">
        <%= f.text_field :first_name, :placeholder => "太郎", autofocus: true, autocomplete: "first_name" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-2">
        <%= f.label :フリガナ %><br />
        </div>
        <div class="col-sm-1">
        （セイ）
        </div>
        <div class="col-sm-3">
        <%= f.text_field :last_name_kana, :placeholder => "ヤマダ", autofocus: true, autocomplete: "last_name_kana" %>
        </div>
        <div class="col-sm-1">
        （メイ）
        </div>
        <div class="col-sm-5">
        <%= f.text_field :first_name_kana, :placeholder => "タロウ", autofocus: true, autocomplete: "first_name_kana" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :メールアドレス %><br />
        </div>
        <div class="col-sm-9">
        <%= f.email_field :email, :placeholder => "yamada@nihon.com", autofocus: true, autocomplete: "email" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :郵便番号（ハイフンなし） %><br />
        </div>
        <div class="col-sm-9">
        <%= f.text_field :zipcode, :placeholder => "1000014", autofocus: true, autocomplete: "zipcode" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :住所 %><br />
        </div>
        <div class="col-sm-9">
        <%= f.text_field :address, :size=>"40x10", :placeholder => "東京都千代田区永田町1丁目7-1", autofocus: true, autocomplete: "address" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :電話番号（ハイフンなし） %><br />
        </div>
        <div class="col-sm-9">
        <%= f.text_field :tel, :placeholder => "01012345678", autofocus: true, autocomplete: "tel" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :パスワード %>
        </div>

        <!--<% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />  -->
        <div class="col-sm-9">
        <%= f.password_field :password, :placeholder => "6文字以上", autocomplete: "new-password" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-sm-3">
        <%= f.label :パスワード（確認用） %><br />
        </div>
        <div class="col-sm-9">
        <%= f.password_field :password_confirmation, :placeholder => "上記と同じパスワード", autocomplete: "new-password" %>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    </div>
  </div>
<% end %>

<div>
  <h3>既に登録済みの方</h3><br>
  <nobr><%= render "devise/shared/links" %> 　からログインしてください。</nobr>
</div>


