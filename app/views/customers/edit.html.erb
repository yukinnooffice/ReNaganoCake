<div class="container">

  <h4 class="Menu">登録情報編集</h4>
  <%= form_for(@customer) do |f| %>
  <div class="row">
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="col-md-2"><%= f.label :名前 %></div>
    <div class="col-md-1"><%= f.label :姓 %></div>
    <div class="col-md-4"><%= f.text_field :last_name %></div>
    <div class="col-md-1"><%= f.label :名 %></div>
    <div class="col-md-4"><%= f.text_field :first_name %></div>
  </div><br>

  <div class="row">
    <div class="col-md-2"><%= f.label :フリガナ %></div>
    <div class="col-md-1"><%= f.label :セイ %></div>
    <div class="col-md-4"><%= f.text_field :last_name_kana %></div>
    <div class="col-md-1"><%= f.label :メイ %></div>
    <div class="col-md-4"><%= f.text_field :first_name_kana %></div>
  </div><br>

  <div class="row">
    <div class="col-md-3"><%= f.label :メールアドレス %></div>
    <div class="col-md-9"><%= f.text_field :email %></div>
    <div class="col"></div>
  </div><br>

  <div class="row">
    <div class="col-md-3"><%= f.label :郵便番号（ハイフンなし） %></div>
    <div class="col-md-9"><%= f.text_field :zipcode %></div>
    <div class="col"></div>
  </div><br>

  <div class="row">
    <div class="col-md-3"><%= f.label :住所 %></div>
    <div class="col-md-9"><%= f.text_field :address, :size=>"40x10" %></div>
    <div class="col"></div>
  </div><br>

  <div class="row">
    <div class="col-md-3"><%= f.label :電話番号（ハイフンなし） %></div>
    <div class="col-md-9"><%= f.text_field :tel %></div>
    <div class="col"></div>
  </div><br>
    <%= f.submit "変更を保存する", class: "btn btn-primary" %>
  <% end %>
    <%= link_to "退会する", customers_withdraw_path, class: "btn btn-danger" %>
</div>